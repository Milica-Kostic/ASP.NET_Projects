@model IEnumerable<RestaurantDataLibrary.Models.OrderModel>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-10 col-md-10 mx-auto">
        <h4 class="text-center">Orders</h4>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Order Name</th>
                    <th>Order Date</th>
                    <th>Quantity</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderName</td>
                        <td>@order.OrderDate</td>
                        <td>@order.Quantity</td>
                        <td>@Html.ActionLink("Display Order", "Display", "Orders", new { id = order.Id }, new { @class = "btn btn-warning float-right" })</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>