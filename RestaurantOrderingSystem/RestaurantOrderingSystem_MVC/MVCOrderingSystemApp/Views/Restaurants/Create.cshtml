@model MVCOrderingSystemApp.Models.Restaurants.CreateRestaurantModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-lg-6 col-md-6 mx-auto">
        <h3 class="text-center">Create Restaurant</h3>
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Restaurant.RestName" class="control-label">Name</label>
                <input asp-for="Restaurant.RestName" class="form-control" />
                <span asp-validation-for="Restaurant.RestName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Restaurant.CategoryId" class="control-label">Category</label>
                <select asp-for="Restaurant.CategoryId" asp-items="Model.CategoryItems" class="form-control"></select>
                <span asp-validation-for="Restaurant.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Restaurant.City" class="control-label">City</label>
                <input asp-for="Restaurant.City" class="form-control" />
                <span asp-validation-for="Restaurant.City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Restaurant.RestDescription" class="control-label">Description</label>
                <textarea asp-for="Restaurant.RestDescription" class="form-control" ></textarea>
                <span asp-validation-for="Restaurant.RestDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create Restaurant" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-outline-success">Cancel</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
