@model IEnumerable<RestaurantDataLibrary.Models.RestaurantModel>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-10 col-md-10 mx-auto">
        <h3 class="text-center">Restaurants</h3>
        <div class="form-group">
            @Html.ActionLink("Add Restaurant", "Create", "Restaurants", null, new { @class = "btn btn-warning" })
        </div>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Restaurant Name</th>
                    <th>City</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var restaurant in Model)
                {
                    <tr>
                        <td>@restaurant.RestName</td>
                        <td>@restaurant.City</td>
                        <td>@Html.ActionLink("Restaurant Details", "Display", "Restaurants", new { id = restaurant.Id }, new { @class = "btn btn-warning float-right" })</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>