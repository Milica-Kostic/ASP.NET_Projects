@model IEnumerable<RestaurantDataLibrary.Models.FoodModel>
@{
    ViewData["Title"] = "Index";
}

<h3 class="text-center">Menu</h3>
<div class="row">
    <div class="col-lg-10 col-md-10 mx-auto">
        <div class="form-group">
            @Html.ActionLink("Add menu Item", "Create", "Food", null, new { @class = "btn btn-warning" })
        </div>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Food</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var food in Model)
                {
                    <tr>
                        <td>@food.FoodName</td>
                        <td>@string.Format("{0:C}", food.Price)</td>
                        <td>@Html.ActionLink("Display meal", "Display", "Food", new { id = food.Id }, new { @class = "btn btn-warning float-right" })</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>