@page
@model RazorOrderingSystemApp.Pages.Orders.DeleteOrderModel
@{
    ViewData["Title"] = "Delete";
}

@if (Model.Order is null)
{
    <h3>The requested record was not found! </h3>
}
else
{
    <div class="h4">
        Are you sure you want to delete order created @Model.Order.OrderDate ?
    </div>
    <form method="post">
        <input asp-for="Id" value="@Model.Id" type="hidden" />
        <div class="form-group">
            <input type="submit" value="Delete Order" class="btn btn-danger" />
            <a asp-page="./DisplayOrder" asp-route-id="@Model.Id" class="btn btn-outline-danger">Cancel</a>
        </div>
    </form>
}
