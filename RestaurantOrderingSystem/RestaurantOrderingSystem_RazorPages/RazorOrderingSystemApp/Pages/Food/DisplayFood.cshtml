@page
@model RazorOrderingSystemApp.Pages.Food.DisplayFoodModel
@{
    ViewData["Title"] = "Food Details";
}
@if (Model.Food is null)
{
    <h4>The requested record was not found</h4>
}
else
{
    <div class="row">
        <div class="col-lg-6 col-md-6 mx-auto">
            <h3 class="text-center">@Model.Food.FoodName</h3>
            <table class="table">
                <tbody>
                    <tr>
                        <td><strong>Restaurant</strong></td>
                        <td>@Model.RestaurantPurchased
                        <td>
                    </tr>
                    <tr>
                        <td><strong>Description</strong></td>
                        <td>@Model.Food.FoodDescription</td>
                    </tr>
                    <tr>
                        <td><strong>Price</strong></td>
                        <td>@string.Format("{0:C}", Model.Food.Price)</td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <a asp-page="./DeleteFood" asp-route-id="@Model.Food.Id" class="btn btn-danger">Delete Item</a>
                        </td>
                    </tr>
                </tbody>
            </table>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="UpdateModel.Id" value="@Model.Food.Id" type="hidden" />

                <div class="form-group">
                    <label class="col-form-label">Name</label>
                    <input asp-for="UpdateModel.FoodName" value="@Model.Food.FoodName" class="form-control" />
                    <span asp-validation-for="UpdateModel.FoodName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="col-form-label">Price</label>
                    <input asp-for="UpdateModel.Price" value="@Model.Food.Price" class="form-control" />
                    <span asp-validation-for="UpdateModel.Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="col-form-label">Description</label>
                    <input asp-for="UpdateModel.FoodDescription" value="@Model.Food.FoodDescription" class="form-control" />
                    <span asp-validation-for="UpdateModel.FoodDescription" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Update Item" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>   
}