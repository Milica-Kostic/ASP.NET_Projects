@model BookingApp.Models.PropertyType
@{
    ViewBag.Title = "DeletePropertyType";
}

<div class="row">
    <div class="col-lg-10">
        <h3>Da li ste sigurni da zelite da izbrisete smestaj @Model.TypeName?</h3>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(p => p.Id)
    <div class="row">
        <div class="col-lg-1 col-md-1 col-sm-2 col-xs-3">
            <div class="form-actions no-color">
                <input type="submit" value="Izbriši" class="btn btn-danger" />
            </div>
        </div>
        <div class="col-lg-1 col-md-1 col-sm-2 col-xs-3">
            <div class="form-actions no-color">
                @Html.ActionLink("Odustani", "Index", "PropertyTypes", new { @class = "btn btn-success" })
            </div>
        </div>
    </div>
}