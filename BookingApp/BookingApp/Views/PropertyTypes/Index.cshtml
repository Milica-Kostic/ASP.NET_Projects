@model IEnumerable<BookingApp.Models.PropertyType>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h2>Vrste smeštaja</h2></center>

<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            @Html.ActionLink("Dodaj vrstu smeštaja", "CreatePropertyType", "PropertyTypes", new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
<table id="propType" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Vrsta smestaja</th>
            <th class="col-lg-1"></th>
            <th class="col-lg-1"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var type in Model)
        {
            <tr>
                <td>
                    @type.TypeName
                </td>
                <td>
                    @Html.ActionLink("Izmeni", "EditPropertyType", new { id = type.Id }, new { @class = "btn btn-success" })
                </td>
                <td>
                    @Html.ActionLink("Izbriši", "DeletePropertyType", new { id = type.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#propType").DataTable({

            });
        });
    </script>
}