@model BookingApp.Models.Country
@{
    ViewBag.Title = "DeleteCountry";
}

<div class="row">
    <div class="col-lg-10">
        <h3>Da li ste sigurni da zelite da izbrisete državu @Model.CountryName ?</h3>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(b => b.Id)
    <div class="row">
        <div class="col-lg-1 col-md-1 col-sm-2 col-xs-3">
            <div class="form-actions no-color">
                <input type="submit" value="Izbrisi" class="btn btn-danger" />
            </div>
        </div>

        <div class="col-lg-1 col-md-1 col-sm-2 col-xs-3">
            <div class="form-actions no-color">
                @Html.ActionLink("Nazad", "Index", "Cities", new { @class = "btn btn-success" })
            </div>
        </div>
    </div>

}