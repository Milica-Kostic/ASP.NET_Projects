@model IEnumerable<BookingApp.Models.Country>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h2> Lista drzava</h2></center>

<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            @Html.ActionLink("Dodaj državu", "CreateCountry", "Countries", new { @class = "btn btn-primary" })
        </div>
    </div>
</div>

<table id="countries" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Naziv drzave</th>
            <th class="col-lg-1"></th>
            <th class="col-lg-1"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var country in Model)
        {
            <tr>
                <td>
                    @country.CountryName
                </td>
                <td>
                    @Html.ActionLink("Izmeni", "EditCountry", new { id = country.Id }, new { @class = "btn btn-success" })
                </td>
                <td>
                    @Html.ActionLink("Izbriši", "DeleteCountry", new { id = country.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#countries").DataTable({
            });
        });
    </script>
}