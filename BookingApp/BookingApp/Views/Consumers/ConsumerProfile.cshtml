@model BookingApp.Models.Consumer
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

@Html.HiddenFor(c => c.Id)
<div class="row">
    <div class="col-lg-12">
        <ul>
            <li>Ime: @Model.Name</li>
            <li>Prezime: @Model.LastName</li>
            <li>Telefon: @Model.Phone</li>
        </ul>
    </div>
</div>

