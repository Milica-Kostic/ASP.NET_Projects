@model BookingApp.Models.City
@{
    ViewBag.Title = "Edit";
}

<h2>Grad</h2>

@using (Html.BeginForm("EditCity", "Cities"))
{
    @Html.AntiForgeryToken();

    <div class=" form-group">
        @Html.LabelFor(c => c.CityName)
        @Html.TextBoxFor(c => c.CityName, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.CityName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Drzava")
        @Html.DropDownList("CountryId", null, "--Izaberite drzavu--", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "text-danger" })
    </div>

    @Html.HiddenFor(c=> c.Id)

    <div class="row">
        <div class="col-lg-1 col-md-1 col-sm-2 col-xs-3">
            <div class="form-actions no-color">
                <input type="submit" value="Sačuvaj" class="btn btn-primary" />
            </div>
        </div>

        <div class="col-lg-1 col-md-1 col-sm-2 col-xs-3">
            <div class="form-actions no-color">
                @Html.ActionLink("Odustani", "Index", "Cities", new { @class = "btn btn-success" })
            </div>
        </div>
    </div>
}
