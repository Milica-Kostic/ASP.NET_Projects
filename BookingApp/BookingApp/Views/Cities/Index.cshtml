@model IEnumerable<BookingApp.Models.City>
@{
    ViewBag.Title = "Index";
}

<center><h2> Lista gradova</h2></center>

<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            @Html.ActionLink("Dodaj grad", "CreateCity", "Cities", new { @class = "btn btn-primary" })
        </div>
    </div>
</div>

<table id="cities" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Naziv grada</th>
            <th>Naziv države</th>
            <th class="col-lg-1"></th>
            <th class="col-lg-1"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var city in Model)
        {
            <tr>
                <td>
                    @city.CityName
                </td>
                <td>
                    @city.Country.CountryName
                </td>
                <td>
                    @Html.ActionLink("Izmeni", "EditCity", new { id = city.Id }, new { @class = "btn btn-success" })
                </td>
                <td>
                    @Html.ActionLink("Izbriši", "DeleteCity", new { id = city.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#cities").DataTable({
            });
        });
    </script>
}