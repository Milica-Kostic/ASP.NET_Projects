@model IEnumerable<BookingApp.Models.Booking>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<center><h2>Rezervacije</h2></center>

<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            @Html.ActionLink("Kreiraj rezervaciju", "CreateBooking", "Bookings", new { @class = "btn btn-primary" })
        </div>
    </div>
</div>

<table id="bookings" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Oglas</th>
            <th>Korisnik</th>
            <th>Check In </th>
            <th>Check Out</th>
            <th> </th>

            
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(booking.Stay.StayName, "Details", new { id = booking.ConsumerId, id2 = booking.StayId })
                </td>
                <td>
                    @booking.Consumer.Name

                </td>
                <td>
                    @booking.CheckIn
                </td>
                <td>
                    @booking.CheckOut
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = booking.ConsumerId, id2 = booking.StayId }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Delete", "Delete", new { id = booking.ConsumerId, id2 = booking.StayId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#bookings").DataTable({
           
            });
        });
    </script>
}