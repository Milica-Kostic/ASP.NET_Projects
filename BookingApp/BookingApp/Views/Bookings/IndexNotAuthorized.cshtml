@model IEnumerable<BookingApp.Models.Booking>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<center><h2>Rezervacije</h2></center>
<table id="bookings" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Oglas</th>
            <th>Korisnik</th>
            <th>Check In </th>
            <th>Check Out</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(booking.Stay.StayName, "Details", new { id = booking.ConsumerId, id2 = booking.StayId })
                </td>
                <td>
                    @booking.Consumer.Name

                </td>
                <td>
                    @booking.CheckIn
                </td>
                <td>
                    @booking.CheckOut
                </td>
            </tr>
        }
    </tbody>
</table>
